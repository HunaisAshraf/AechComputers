<%- include("partials/header") %>
<section class="content lists col-md-10">
  <div>
    <div class="border rounded p-2">
      <div class="search d-md-flex justify-content-between border-bottom p-2">
        <h2>Sales Report</h2>
        <div class="d-flex gap-2">
          <form
            class="d-flex gap-2"
            action="/filter-sales-report"
            method="post"
          >
            <% if(date){ %>
            <input
              type="date"
              name="startDate"
              class="form-control"
              value="<%= date.startDate %>"
            />
            <input
              type="date"
              name="endDate"
              class="form-control"
              value="<%= date.endDate %>"
            />

            <% }else{ %>
            <input type="date" name="startDate" class="form-control" />
            <input type="date" name="endDate" class="form-control" />

            <% } %>

            <button class="btn btn-dark">Filter</button>
          </form>
          <a href="/download-sales-report" class="btn btn-dark"
            >Download Report</a
          >
        </div>
      </div>
      <div class="table-responsive content">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Products</th>
              <th scope="col">Price</th>
              <th scope="col">Payment Method</th>
              <th scope="col">Order Date</th>
              <th scope="col">Status</th>
            </tr>
          </thead>
          <tbody>
            <% sales.forEach((order,i) => { %>

            <tr id="<%= order._id %>">
              <th scope="row"><%= order.orderNumber %></th>
              <td><%= order.address.name %></td>
              <td>
                <ul>
                  <% order.products.forEach(product => { %>
                  <li><%= product.product.productName %></li>
                  <% }) %>
                </ul>
              </td>
              <td>â‚¹ <%= new Intl.NumberFormat().format(order.totalPrice) %></td>
              <td><%= order.paymentMethod %></td>
              <td><%= order.createdAt.toLocaleString() %></td>
              <td><%= order.status %></td>
              <% }) %>
            </tr>
          </tbody>

          <tbody></tbody>
        </table>
        <div class="d-flex justify-content-center py-3">
          <nav aria-label="Page navigation example">
            <ul class="pagination">
              <% for( let i = 0; i < count/limit; i++ ) { %>
                <li class="page-item">
                  <a class="page-link" href="/sales-report/?page=<%=i+1 %>"><%= i+1 %></a>
                </li>
                <% } %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include("partials/footer") %>
