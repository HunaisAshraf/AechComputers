<%- include("partials/header") %>
<section class="content lists col-md-10">
  <div
    class="box border rounded p-2 d-flex flex-column align-items-center justify-content-center"
  >
    <div class="w-50 shadow p-5">
      <h2 class="text-center my-3">Add Banner</h2>

      <form action="/add-Banner" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <img id="image" alt="" class="rounded mb-3" height="420" />
          <div>
            <input
              type="file"
              class="form-control"
              id="image"
              aria-describedby="emailHelp"
              name="image"
              accept="image/*"
              onchange="loadFile(event)"
              required
            />
          </div>
        </div>
        <img src="" id="croppedImg" alt="" />
        <div class="text-center">
          <button type="submit" class="btn btn-dark w-50">Submit</button>
        </div>
      </form>
    </div>
  </div>
</section>
<script>
  function loadFile(event) {
    let image = document.getElementById("image");

    image.src = URL.createObjectURL(event.target.files[0]);

    const cropper = new Cropper(image, {
      autoCrop: false,
      ready() {
        this.cropper.crop();
      },
    });

    console.log(cropper);

    document.getElementById("croppedImg").src = croppe;
  }
</script>
