<%- include("partials/header") %>
<main class="container-md">
  <div class="row justify-content-center align-items-center mt-5">
    <div
      class="login-container py-5 col-md-8 row justify-content-center align-items-center rounded"
    >
      <h3 class="text-center text-white mb-4">Forget Password</h3>
      <div class="col-md-8 bg-white rounded">
        <form class="py-5 px-2" action="/update-password" method="post">
          <div class="text-center">
            <p>Enter your new password</p>
          </div>
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              id="exampleInputEmail1"
              aria-describedby="emailHelp"
              name="password"
            />
            <% if(inputErr){ %>
            <span class="text-danger"><%= errMsg.password %></span>
            <% } %>
          </div>
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label"
              >Confirm Password</label
            >
            <input
              type="password"
              class="form-control"
              id="exampleInputEmail1"
              aria-describedby="emailHelp"
              name="confirmPassword"
            />
            <% if(inputErr){ %>
            <span class="text-danger"><%= errMsg.confirmPassword %></span>
            <% } %>
          </div>
          <div class="text-center">
            <button id="submit" class="submit-btn">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</main>
<%- include("partials/footer") %>
