    //     localStorage.removeItem("time");
    //     submit.classList.add("hidden");
    //     resend.classList.remove("hidden");
    //     clearInterval(interval);
    //   }
    //   localStorage.setItem("time", time);
    //   timeCounter.innerText = `OTP expires in ${time} seconds`;
    //   time--;
    // }, 1000);
  </script>
</main>
