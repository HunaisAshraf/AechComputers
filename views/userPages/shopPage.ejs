<script>
  document.addEventListener("DOMContentLoaded", () => {
    if ("<%= selectedFilter%>") {
      document.getElementById("<%= selectedFilter %>").checked = true;
    }
  });
  async function addCart(event, id) {
    try {
      event.preventDefault();

      const data = await fetch(`/add-to-cart/${id}`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ quantity: 1 }),
      });

      const json = await data.json();
      if (json.outOfStock) {
        Swal.fire({
          title: "OutOfStock!!!",
          text: "Product out of stock",
          icon: "warmng",
          confirmButtonText: "Ok",
        });
      } else if (json.success) {
        Swal.fire({
          title: "Added!!!",
          text: "Product Added to cart",
          icon: "success",
          confirmButtonText: "Ok",
        }).then(() => {
          window.location.href = "/cart";
        });
      }
    } catch (error) {
      console.log(error);
    }
  }
  async function addWishlist(event, id) {
    try {
      event.preventDefault();

      const data = await fetch(`/add-to-wishlist/${id}`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
      });

      const json = await data.json();

      if (json.exist) {
        Swal.fire({
          title: "Added!!!",
          text: "Product Added to wishlist",
          icon: "success",
          confirmButtonText: "Ok",
        }).then(() => {
          window.location.href = "/wishlist";
        });
      } else if (json.success) {
        Swal.fire({
          title: "Added!!!",
          text: "Product Added to wishlist",
          icon: "success",
          confirmButtonText: "Ok",
        }).then(() => {
          window.location.href = "/wishlist";
        });
      } else {
        Swal.fire({
          title: "Failed!!!",
          text: "failed to add product to wishlist",
          icon: "error",
          confirmButtonText: "Ok",
        });
      }
    } catch (error) {
      console.log(error);
    }
  }

  let sortDefaultValue = document.getElementById("sortProduct").value;
  async function handleSort() {
    let sort = document.getElementById("sortProduct").value;
    console.log(sort);

    if (sortDefaultValue !== sort) {
      let data = await fetch(`/sort-product/?sort=${sort}`);
      let json = await data.json();

      if (json.success) {
        window.location.reload();
      }
    }
  }

  function submitForm() {
    document.getElementById("categoryForm").submit();
  }
  function submitPrice() {
    document.getElementById("priceForm").submit();
  }

  function showFilter() {
    document.getElementById("filter").style.display = "block";
  }
  function hideFilter() {
    document.getElementById("filter").style.display = "none";
  }
</script>

<style>
  .filter-btn {
    display: none;
  }
  .filter {
    display: block;
    position: sticky;
    top: 0;
  }
  .close-btn {
    display: none;
  }

  .all-products {
    /* margin-left: 250px; */
  }

  @media only screen and (max-width: 1025px) {
    .filter {
      display: block;
    }
  }

  @media only screen and (max-width: 1024px) {
    .filter {
      display: none;
      /* position: fixed;
    top: 0; */
      position: absolute;
      z-index: 1;
      background-color: #ffffff;
      width: 200px;
    }
    .filter-btn {
      display: block;
    }
    .head {
      display: flex;
      justify-content: space-between;
    }
    .filter-toggle {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .close-btn {
      display: block;
    }
  }
</style>
