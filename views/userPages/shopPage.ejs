<%- include("partials/header") %>
<main class="container-md">
  <div class="d-flex">
    <aside id="filter" class="col-md-2 filter border my-5">
      <div class="filter-toggle">
        <h3 class="text-center my-3">Filter</h3>
        <button class="close-btn btn" onclick="hideFilter()">
          <i class="bi bi-x-lg"></i>
        </button>
      </div>

      <div class="mx-lg-2">
        <form action="/filter-category" method="post" id="categoryForm">
          <h5 class="mb-3">Category</h5>
          <% categories.forEach(category => { %>
          <div class="form-check my-2">
            <input
              class="form-check-input border-secondary"
              type="radio"
              name="id"
              id="flexRadioDefault1"
              value="<%= category._id %>"
              oninput="submitForm()"
            />
            <label class="form-check-label" for="flexRadioDefault1">
              <%= category.categoryName %>
            </label>
          </div>
          <% }); %>
        </form>
        <form action="/filter-price" method="post" class="my-3" id="priceForm">
          <h5 class="mb-3">Price</h5>
          <div class="form-check my-2">
            <input
              class="form-check-input border-secondary"
              type="radio"
              name="price"
              id="flexRadioDefault1"
              value="50000"
              oninput="submitPrice()"
            />
            <label class="form-check-label" for="flexRadioDefault1">
              ₹ 50,000
            </label>
          </div>
          <div class="form-check my-2">
            <input
              class="form-check-input border-secondary"
              type="radio"
              name="price"
              id="flexRadioDefault1"
              value="100000"
              oninput="submitPrice()"
            />
            <label class="form-check-label" for="flexRadioDefault1">
              ₹ 1,00,000
            </label>
          </div>
          <div class="form-check my-2">
            <input
              class="form-check-input border-secondary"
              type="radio"
              name="price"
              id="flexRadioDefault1"
              value="150000"
              oninput="submitPrice()"
            />
            <label class="form-check-label" for="flexRadioDefault1">
              ₹ 1,50,000
            </label>
          </div>
          <div class="form-check my-2">
            <input
              class="form-check-input border-secondary"
              type="radio"
              name="price"
              id="flexRadioDefault1"
              value="200000"
              oninput="submitPrice()"
            />
            <label class="form-check-label" for="flexRadioDefault1">
              ₹ 2,00,000
            </label>
          </div>
        </form>
      </div>
    </aside>
    <section class="all-products border my-5 mx-3 w-100">
      <div class="p-3">
        <div class="head border-bottom py-2 d-flex justify-content-between">
          <h2 class="text-center">All products</h2>
          <select name="" id="" class="form-select form-select-sm rounded w-25">
            <option selected>Filter</option>
            <option value="">Low - High</option>
            <option value="">High - Low</option>
          </select>
          <button class="btn btn-dark filter-btn" onclick="showFilter()">
            Filter
          </button>
        </div>
        <div class="row">
          <% products.forEach(product => { %>
          <div class="col-lg-4 col-md-6 p-2">
            <a
              href="/product/<%= product._id %>"
              class="text-decoration-none text-dark"
            >
              <div class="card mx-auto shadow" style="width: 18rem">
                <img
                  src="uploads/<%= product.images[0] %>"
                  class="card-img-top"
                  alt="..."
                />
                <div
                  class="card-body d-flex justify-content-between align-items-center"
                >
                  <div>
                    <h5 class="card-title"><%= product.productName %></h5>
                    <p class="card-text">
                      ₹ <%= new Intl.NumberFormat().format(product.price)%>
                    </p>
                  </div>
                  <% if(signIn){ %>
                  <button
                    onclick="addCart(event,'<%= product._id %>')"
                    class="btn btn-dark rounded-circle py-2"
                  >
                    <i class="bi bi-cart-fill"></i>
                  </button>
                  <% }else{ %>

                  <a href="/signin" class="btn btn-dark rounded-circle py-2">
                    <i class="bi bi-cart-fill"></i
                  ></a>
                  <% } %>
                </div>
              </div>
            </a>
          </div>

          <% }) %>
        </div>
      </div>
    </section>
  </div>
</main>

<script>
  async function addCart(event, id) {
    try {
      event.preventDefault();

      const data = await fetch(`/add-to-cart/${id}`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ quantity: 1 }),
      });

      const json = await data.json();

      if (json.success) {
        Swal.fire({
          title: "Added!!!",
          text: "Product Added to cart",
          icon: "success",
          confirmButtonText: "Ok",
        }).then(() => {
          window.location.href = "/cart";
        });
      }
    } catch (error) {
      console.log(error);
    }
  }

  function submitForm() {
    document.getElementById("categoryForm").submit();
  }
  function submitPrice() {
    document.getElementById("priceForm").submit();
  }

  function showFilter() {
    document.getElementById("filter").style.display = "block";
  }
  function hideFilter() {
    document.getElementById("filter").style.display = "none";
  }
</script>

<style>
  .filter-btn {
    display: none;
  }
  .filter {
    display: block;
    position: sticky;
    top: 0;
  }
  .close-btn {
    display: none;
  }

  .all-products {
    /* margin-left: 250px; */
  }

  @media only screen and (max-width: 1025px) {
    .filter {
      display: block;
    }
  }

  @media only screen and (max-width: 1024px) {
    .filter {
      display: none;
      /* position: fixed;
    top: 0; */
      position: absolute;
      z-index: 1;
      background-color: #ffffff;
      width: 200px;
    }
    .filter-btn {
      display: block;
    }
    .head {
      display: flex;
      justify-content: space-between;
    }
    .filter-toggle {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .close-btn {
      display: block;
    }
  }
</style>
<%- include("partials/footer") %>
