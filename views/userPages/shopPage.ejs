          <ul class="pagination">
            <!-- <li class="page-item">
              <a class="page-link" href="#">Previous</a>
            </li> -->
            <% for( let i = 0; i < count/limit; i++ ) { %>
            <li class="page-item">
              <a class="page-link" href="/shop/?page=<%=i+1 %>"><%= i+1 %></a>
            </li>
            <% } %>
